<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#888888"/> <!-- Use your desired shade of grey, e.g., #888888 -->
        </shape>
    </item>

    <!-- Plus Sign (+) -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <size android:width="4dp"/>
            <size android:height="16dp"/>
            <solid android:color="#FFFFFF"/> <!-- Color of the plus sign (white) -->
        </shape>
    </item>

    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <size android:width="16dp"/>
            <size android:height="4dp"/>
            <solid android:color="#FFFFFF"/> <!-- Color of the plus sign (white) -->
        </shape>
    </item>

</selector>