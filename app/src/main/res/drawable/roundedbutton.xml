<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (black with rounded corners) -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#000" /> <!-- Black background color -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Button content (white text) -->
    <item android:right="20dp" android:left="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- White text color -->
        </shape>
    </item>
</layer-list>
